{
    "hosting": {
        "public": "out",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "cleanUrls": true,
        "trailingSlash": true,
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "no-cache, no-store, must-revalidate"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "/tejas-portal",
                "destination": "/tejas-portal.html"
            },
            {
                "source": "/tejas-portal.html",
                "destination": "/tejas-portal.html"
            },
            {
                "source": "/tejas/dashboard",
                "destination": "/tejas/dashboard/index.html"
            },
            {
                "source": "/tejas/checkin",
                "destination": "/tejas/checkin/index.html"
            },
            {
                "source": "/tejas/volunteer-hub",
                "destination": "/tejas/volunteer-hub/index.html"
            },
            {
                "source": "/tejas/vol",
                "destination": "/tejas/vol/index.html"
            },
            {
                "source": "/dashboard",
                "destination": "/dashboard/index.html"
            },
            {
                "source": "/dashboard/**",
                "destination": "/dashboard/index.html"
            },
            {
                "source": "/start",
                "destination": "/start/index.html"
            },
            {
                "source": "/project",
                "destination": "/project/index.html"
            },
            {
                "source": "/login",
                "destination": "/login/index.html"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    },
    "functions": [
        {
            "source": "functions",
            "codebase": "default",
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ]
        }
    ],
    "firestore": {
        "rules": "firestore.rules",
        "indexes": "firestore.indexes.json"
    }
}